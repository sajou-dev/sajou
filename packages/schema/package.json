{
  "name": "@sajou/schema",
  "version": "0.0.0",
  "private": true,
  "description": "JSON Schemas and TypeScript types for Sajou signal protocol, choreographies, themes, and entities",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./signal.schema.json": "./src/signal.schema.json",
    "./entity-visual.schema.json": "./src/entity-visual.schema.json"
  },
  "files": [
    "dist",
    "src/*.schema.json"
  ],
  "scripts": {
    "build": "tsc --build",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "ajv": "^8.17.1"
  }
}
